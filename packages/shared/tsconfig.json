{
	"compilerOptions": {
		"outDir": "dist",
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "verbatimModuleSyntax": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "checkJs": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "lib": ["esnext", "DOM", "DOM.Iterable"]
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules/**"]
}
